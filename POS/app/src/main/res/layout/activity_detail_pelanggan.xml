<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aiopos.apps.activity.DetailPelangganActivity"
    android:orientation="vertical"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBlueBasic"
            app:popupTheme="@style/AppTheme.PopupOverlay">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_arrow_back_white_24dp"
                        android:id="@+id/ivMenuDetailPelangganArrowBack" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvMenuDetailPelangganJudulMenu"
                        android:text="Detail Pelanggan"
                        android:textSize="@dimen/_16ssp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1">
                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_mode_edit_white_24dp"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:id="@+id/ivMenuDetailPelangganEditPelanggan"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:id="@+id/civMenuDetailPelangganLogoPelanggan"
            android:src="@drawable/logopos"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMenuDetailPelangganNamaPelanggan"
            android:text="Nama Pelanggan"
            android:textSize="@dimen/_16ssp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMenuDetailPelangganNoTelpPelanggan"
            android:text="No Telepon Pelanggan"
            android:textSize="@dimen/_16ssp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvMenuDetailPelangganEmailPelanggan"
            android:text="Email Pelanggan"
            android:textSize="@dimen/_16ssp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBlueBasic"
                    android:layout_marginTop="@dimen/_5sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvMenuDetailPelangganInformasiDetail"
                        android:text="Informasi Detail"
                        android:textSize="@dimen/_16ssp"
                        android:layout_margin="@dimen/_10sdp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganIDMember"
                    android:text="ID Member"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganNoIDMember"
                    android:text="1234567"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganProvinsiMember"
                    android:text="Provinsi"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganNamaProvinsiMember"
                    android:text="Nama Provinsi"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganKabKotMember"
                    android:text="Kabupaten / Kota"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganNamaKabKotMember"
                    android:text="Nama Kab / Kota"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganKecamatanMember"
                    android:text="Kecamatan"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMenuDetailPelangganNamaKecamatanMember"
                    android:text="Nama Kecamatan"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMenuDetailPelangganPilihPelanggan"
                    android:text="Pilih Pelanggan"
                    android:textSize="@dimen/_14ssp"
                    android:background="@color/colorBlueBasic"
                    android:textColor="@android:color/white"
                    android:layout_margin="@dimen/_10sdp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>