<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/_20sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:theme="@style/AppTheme"
    app:cardCornerRadius="@dimen/_20sdp"
    android:background="#BBFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civMenuPelangganListLogoPelanggan"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/logopos"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMenuPelangganListNamaPelanggan"
                android:text="Nama Pelanggan"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/_10sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMenuPelangganListNoTelpPelanggan"
                android:text="Nomor Telepon"
                android:textSize="@dimen/_12ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMenuPelangganListEmailPelanggan"
                android:text="Email Pelanggan"
                android:textSize="@dimen/_12ssp"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/btnDetailPelanggan"
                    android:text="Detail"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/colorWhiteffffff"
                    android:background="@drawable/round_blue_button"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/btnPelangganPilihPelanggan"
                    android:text="Pilih"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/colorWhiteffffff"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="@drawable/round_green_button"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>