<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LupaKataSandiActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/background_gradient">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="AIO POS"
        android:textColor="@color/colorWhiteffffff"
        android:textSize="@dimen/_23ssp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/ivLogoAIO"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/logopos"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvJudulLupaKataSandi"
        android:text="Lupa Kata Sandi?"
        android:textSize="@dimen/_12ssp"
        android:textColor="@android:color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvPenjelasanLupaKataSandi"
        android:text="@string/lupa"
        android:paddingRight="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:textSize="@dimen/_11ssp"
        android:textColor="@android:color/white" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:id="@+id/edtEmailYangTerdaftar"
        android:hint="Alamat Email yang Terdaftar"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textCursorDrawable="@null"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_15ssp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/btnKirimLupaPassword"
        android:text="Kirim"
        android:textSize="@dimen/_13ssp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="@drawable/round_green_button"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMasukLupaKataSandi"
            android:text="Masuk"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/colorBlueBasic"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_20sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSekarangLupaKataSandi"
            android:text="sekarang"
            android:layout_marginLeft="@dimen/_5sdp"
            android:textSize="@dimen/_12ssp"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"/>
</LinearLayout>