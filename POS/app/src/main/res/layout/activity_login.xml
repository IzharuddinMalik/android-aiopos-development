<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/background_gradient"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="AIO POS"
        android:textColor="@color/colorWhiteffffff"
        android:textSize="@dimen/_23ssp"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/ivLogoAIO"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/logopos"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tietEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textbox_border"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_5sdp"
            android:textColor="@color/colorWhiteffffff"
            android:textColorHint="@color/colorWhiteffffff"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_15ssp" />
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textbox_border"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColorHint="@android:color/white"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tietPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:background="@drawable/textbox_border"
                android:inputType="textPassword"
                android:hint="Password"
                android:textColor="@color/colorWhiteffffff"
                android:textColorHint="@color/colorWhiteffffff"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/_15ssp" />
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:id="@+id/ivPassShow"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:src="@drawable/pass"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/tvLupaKataSandi"
        android:text="Forgot Your Password?"
        android:textColor="@color/colorWhiteffffff"
        android:textSize="@dimen/_12ssp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/btnLogin"
        android:text="Masuk"
        android:background="@drawable/round_green_button"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorWhiteffffff"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:id="@+id/btnRegister"
        android:text="Daftar"
        android:background="@drawable/round_blue_button"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/colorWhiteffffff"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_5sdp"/>
</LinearLayout>