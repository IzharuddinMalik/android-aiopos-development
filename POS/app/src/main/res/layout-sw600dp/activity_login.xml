<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aiopos.apps.activity.LoginActivity"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="left|center">

    <ImageView
        android:id="@+id/ivLogoAIO"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:src="@drawable/logopos" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_45sdp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tietEmailLogin"
            android:hint="Email"
            android:textColor="@color/colorBlueBasic"
            android:textSize="@dimen/_16ssp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_45sdp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tietPasswordLogin"
            android:hint="Password"
            android:textColor="@color/colorBlueBasic"
            android:textSize="@dimen/_16ssp"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:text="Masuk"
        android:background="@color/colorBlueBasic"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/colorWhiteffffff"
        android:layout_marginRight="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:padding="@dimen/_5sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLupaKataSandi"
        android:text="Lupa Kata Sandi"
        android:textColor="@color/colorBlueBasic"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_45sdp"/>
</LinearLayout>