<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNamaLogo"
        android:text="UltraPOS"
        android:textColor="@color/colorBlueBasic"
        android:textStyle="bold"
        android:textSize="@dimen/_48ssp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_45sdp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tietEmailLogin"
            android:hint="Email"
            android:textColor="@color/colorBlueBasic"
            android:textSize="@dimen/_16ssp"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_45sdp">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tietPasswordLogin"
            android:hint="Password"
            android:textColor="@color/colorBlueBasic"
            android:textSize="@dimen/_16ssp"/>
    </android.support.design.widget.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLogin"
        android:text="Masuk"
        android:background="@color/colorBlueBasic"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginRight="@dimen/_45sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:padding="@dimen/_5sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLupaKataSandi"
        android:text="Lupa Kata Sandi"
        android:textColor="@color/colorBlueBasic"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_45sdp"
        android:layout_marginRight="@dimen/_45sdp"/>
</LinearLayout>